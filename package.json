{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "A modern chat application with React Native, Next.js, and Node.js",
  "homepage": "https://github.com/asius09/chat-app#readme",
  "bugs": {
    "url": "https://github.com/asius09/chat-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asius09/chat-app.git"
  },
  "license": "ISC",
  "author": "asius",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:browser\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:browser": "npm run dev --workspace=browser",
    "dev:mobile": "npm run start --workspace=mobile",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:browser": "npm run build --workspace=browser",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "concurrently": "^9.1.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
