{
  "name": "chat-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:browser\"",
    "dev:backend": "npm run dev --workspace=@chat-app/backend",
    "dev:browser": "npm run dev --workspace=@chat-app/browser",
    "dev:mobile": "npm run start --workspace=@chat-app/mobile",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:browser\" \"npm run dev:mobile\"",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=@chat-app/backend",
    "build:browser": "npm run build --workspace=@chat-app/browser",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "concurrently": "^9.1.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
