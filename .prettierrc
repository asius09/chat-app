{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 100,
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "jsxSingleQuote": false,
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": ["app/web/**/*.{js,jsx,ts,tsx}"],
      "options": {
        "singleQuote": false,
        "printWidth": 100
      }
    },
    {
      "files": ["app/mobile/**/*.{js,jsx,ts,tsx}"],
      "options": {
        "singleQuote": true,
        "printWidth": 100
      }
    },
    {
      "files": ["app/backend/**/*.{js,ts}"],
      "options": {
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 100
      }
    }
  ]
}
